<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book' %>
<% end %>

<h1>Book detail</h1>

<% @books.each do |book| %>

  <p><%= book.title %></p>
  <p><%= book.body %></p>

  <%= link_to 'edit',edit_book_path(current_user.id) %>


<% end %>