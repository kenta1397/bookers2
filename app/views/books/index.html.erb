<h2>User info</h2>



<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>

<% @books.each do |book| %>

  <%= book.title %>
  <%= book.body %>

<% end %>